<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_egg_data"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingEnd="8dp"
            >

            <ImageView
                android:id="@+id/iv_egg_type_icon"
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:minHeight="100dp"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_egg_undefined"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <ImageView
                android:id="@+id/iv_expand_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_down"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/tv_egg_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/egg_type"
                android:textSize="15sp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/iv_egg_type_icon"
                app:layout_constraintStart_toStartOf="@id/iv_egg_type_icon"
                app:layout_constraintEnd_toEndOf="@id/iv_egg_type_icon"
                />


            <TextView
                android:id="@+id/tv_label_telem_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Label"
                android:text="@string/telemetry_timestamp"
                app:layout_constraintStart_toEndOf="@+id/iv_egg_type_icon"
                app:layout_constraintTop_toTopOf="@+id/iv_egg_type_icon"
                />

            <TextView
                android:id="@+id/tv_telemetry_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="00:00:00 - 00/00/0000"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_telem_timestamp"
                app:layout_constraintStart_toStartOf="@+id/tv_label_telem_timestamp"
                />

            <TextView
                android:id="@+id/tv_label_telem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Label"
                android:text="@string/telemetry"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_telemetry_timestamp"
                app:layout_constraintStart_toStartOf="@+id/tv_telemetry_timestamp"
                />

            <TextView
                android:id="@+id/tv_telemetry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="telemetry"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_telem"
                app:layout_constraintStart_toStartOf="@+id/tv_label_telem_timestamp"
                />

            <TextView
                android:id="@+id/tv_label_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id"
                style="@style/TextAppearance.Label"
                android:layout_margin="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_egg_type"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="000000000000"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_id"
                app:layout_constraintStart_toStartOf="@+id/tv_label_id"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/gp_extra_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="tv_label_id, tv_id"
                android:visibility="gone"
                tools:visibility="visible"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>




</com.google.android.material.card.MaterialCardView>