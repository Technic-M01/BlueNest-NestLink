<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:paddingEnd="8dp"
        >

        <ImageView
            android:id="@+id/iv_egg_type_icon"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:minHeight="100dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_egg_undefined"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/tv_egg_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="egg type"
            android:textSize="15sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/iv_egg_type_icon"
            app:layout_constraintStart_toStartOf="@id/iv_egg_type_icon"
            app:layout_constraintEnd_toEndOf="@id/iv_egg_type_icon"
            />


        <TextView
            android:id="@+id/tv_label_telem_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Label"
            android:text="Telemetry Timestamp"
            app:layout_constraintStart_toEndOf="@+id/iv_egg_type_icon"
            app:layout_constraintTop_toTopOf="@+id/iv_egg_type_icon"
            />

        <TextView
            android:id="@+id/tv_telemetry_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="telem timestamp"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_telem_timestamp"
            app:layout_constraintStart_toStartOf="@+id/tv_label_telem_timestamp"
            />

        <TextView
            android:id="@+id/tv_label_telem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Label"
            android:text="Telemetry"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_telemetry_timestamp"
            app:layout_constraintStart_toStartOf="@+id/tv_telemetry_timestamp"
            />

        <TextView
            android:id="@+id/tv_telemetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="telemetry"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_telem"
            app:layout_constraintStart_toStartOf="@+id/tv_label_telem_timestamp"
            />

        <TextView
            android:id="@+id/tv_label_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            style="@style/TextAppearance.Label"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_telemetry"
            app:layout_constraintStart_toStartOf="@+id/tv_telemetry_timestamp"
            />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="id"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_id"
            app:layout_constraintStart_toStartOf="@+id/tv_label_telem_timestamp"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>